# Detect JavaScript files (React and Next.js)
*.js linguist-detectable=true
*.jsx linguist-detectable=true

# Detect TypeScript files (if used)
*.ts linguist-detectable=true
*.tsx linguist-detectable=true

# Detect CSS files (including Tailwind CSS)
*.css linguist-detectable=true

# Exclude node_modules from language detection
node_modules/* linguist-vendored

# Include hidden configuration files
.eslintrc.json linguist-detectable=true
.gitignore linguist-detectable=true
